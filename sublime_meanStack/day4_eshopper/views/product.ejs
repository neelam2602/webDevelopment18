    <meta name="author" content="">
    <title>Home | E-Shopper</title>
    <link href="/public/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/css/font-awesome.min.css" rel="stylesheet">
    <link href="/public/css/prettyPhoto.css" rel="stylesheet">
    <link href="/public/css/price-range.css" rel="stylesheet">
    <link href="/public/css/animate.css" rel="stylesheet">
	<link href="/public/css/main.css" rel="stylesheet">
	<link href="/public/css/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->       
    <link rel="shortcut icon" href="/public/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/public/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/public/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/public/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/public/images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->

<body>
	<% include ./header.ejs %>
	
	<section id="form"><!--form-->
		<div class="container">
			<div class="row">
				<div class="col-sm-4 col-sm-offset-1">
					<div class="login-form"><!--login form-->
						
						<form id="product_action">
							<input type="text" placeholder="Enter current title" name="title" />
							<input type="text" placeholder="Enter current price" name="price" />
							<input type="text" placeholder="Enter current discount" name="discount" />
							<input type="file" name="file_upload">
							<textarea name="description" style="margin-bottom: 10px " placeholder="Enter description"></textarea>
							<select  style="margin-bottom: 10px " name="cat_drop">
								<% for(i=0;i<r2.length;i++) { %>
									<option><%= r2[i].category %></option>
								<% } %>
							</select>
							
							<select name="brand_drop">
								<% for(i=0;i<r1.length;i++) { %>
									<option><%= r1[i].brand %></option>
								<% } %>
							</select>
							

							<button type="button" class="btn btn-default btn_product">Add Product</button>
						</form>
						<div class="err_div">
							
						</div>
					</div><!--/login form-->
				</div>
				
				
			</div>
		</div>
	</section><!--/form-->
	
	<% include ./footer.ejs%>

  
    
</body>
</html>